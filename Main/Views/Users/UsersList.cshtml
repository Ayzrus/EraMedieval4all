@model IEnumerable<Main.Class.UsersClass>

@{
    ViewData["Title"] = "Utilizadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- First Portlet: Table of Consults-->
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label text-center">
            <h3 class="kt-portlet__head-title">
                Listagem
            </h3>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="spinner-border text-primary" id="loading3" style="display: none; text-align: center;">
            <span class="sr-only">Loading...</span>
        </div>

        <table class="table table-striped- table-bordered table-hover dataTable no-footer dtr-inline" id="kt_table_3" style="display: none;">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Morada</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th>Tipo Utilizador</th>
                    <th>Status</th>
                    <th>Data Criação</th>
                    <th>Ultimo Acesso</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nome</td>
                        <td>@item.Morada</td>
                        <td>@item.Telefone</td>
                        <td>@item.Email</td>
                        <td>@item.Tipo</td>
                        <td>@item.Status</td>
                        <td>@item.DataCricao</td>
                        <td class="d-flex justify-content-between align-items-center">
                            <div>
                                @item.UltimoAcesso
                            </div>
                            <div class="btn-group">
                                <button onclick="off(@item.Id)" type="button" class="btn btn-outline-hover-danger btn-sm btn-icon"><i class="fa fa-power-off"></i></button>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script src="~/js/user.js"></script>