@model Main.Models.Relatorios.RelatorioModel

@{
	ViewData["Title"] = "Relátorios";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Context.Session.GetString("tipo") != "Administrador")
{
	<div class="alert alert-danger text-center" role="alert">
		<strong>Aviso:</strong> Você não tem permissão para acessar.
	</div>
}
else
{

	<!-- First Portlet: Table of Consults-->
	<div class="kt-portlet">
		<div class="kt-portlet__head">
			<div class="kt-portlet__head-label text-center">
				<h3 class="kt-portlet__head-title">
					Clientes
				</h3>
			</div>
		</div>
		<div class="kt-portlet__body">
			<div class="spinner-border text-primary" id="loading3" style="display: none; text-align: center;">
				<span class="sr-only">Loading...</span>
			</div>

			<table class="table table-striped- table-bordered table-hover dataTable no-footer dtr-inline" id="kt_table_6" style="display: none;">
				<thead>
					<tr>
						<th>Nif</th>
						<th>Nome</th>
						<th>Morada</th>
						<th>Email</th>
						<th>Telefone</th>
						<th>Quantidade de Trajes Alugados</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.Cliente)
					{
						<tr>
							<td>@item.Nif</td>
							<td>@item.Nome</td>
							<td>@item.Morada</td>
							<td>@item.Email</td>
							<td>@item.Telefone</td>
							<td>@item.Quantidade</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>

	<!-- First Portlet: Table of Consults-->
	<div class="kt-portlet">
		<div class="kt-portlet__head">
			<div class="kt-portlet__head-label text-center">
				<h3 class="kt-portlet__head-title">
					Trajes mais alugados
				</h3>
			</div>
		</div>
		<div class="kt-portlet__body">
			<div class="spinner-border text-primary" id="loading1" style="display: none; text-align: center;">
				<span class="sr-only">Loading...</span>
			</div>

			<table class="table table-striped- table-bordered table-hover dataTable no-footer dtr-inline" id="kt_table_7" style="display: none;">
				<thead>
					<tr>
						<th>Ref</th>
						<th>Nome</th>
						<th>Quantidade</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.Trajes)
					{
						<tr>
							<td>@item.Ref</td>
							<td>@item.Nome</td>
							<td>@item.TrajesAlugados</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>

	<!-- First Portlet: Table of Consults-->
	<div class="kt-portlet">
		<div class="kt-portlet__head">
			<div class="kt-portlet__head-label text-center">
				<h3 class="kt-portlet__head-title">
					Clientes que mais gastaram
				</h3>
			</div>
		</div>
		<div class="kt-portlet__body">
			<div class="spinner-border text-primary" id="loading2" style="display: none; text-align: center;">
				<span class="sr-only">Loading...</span>
			</div>

			<table class="table table-striped- table-bordered table-hover dataTable no-footer dtr-inline" id="kt_table_8" style="display: none;">
				<thead>
					<tr>
						<th>Nif</th>
						<th>Nome</th>
						<th>Morada</th>
						<th>Email</th>
						<th>Telefone</th>
						<th>Valor Total</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.ClienteV)
					{
						<tr>
							<td>@item.Nif</td>
							<td>@item.Nome</td>
							<td>@item.Morada</td>
							<td>@item.Email</td>
							<td>@item.Telefone</td>
							<td>@item.Valor</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>

}