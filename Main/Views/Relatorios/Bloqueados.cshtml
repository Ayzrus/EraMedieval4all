@model Main.Models.Relatorios.UserModel

@{
    ViewData["Title"] = "Relátorio - Users Bloqueados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Context.Session.GetString("tipo") != "Administrador")
{
    <div class="alert alert-danger text-center" role="alert">
        <strong>Aviso:</strong> Você não tem permissão para acessar.
    </div>
}
else
{

    <!-- First Portlet: Table of Consults-->
    <div class="kt-portlet">
        <div class="kt-portlet__head">
            <div class="kt-portlet__head-label text-center">
                <h3 class="kt-portlet__head-title">
                    Listagem
                </h3>
            </div>
        </div>
        <div class="kt-portlet__body">
            <div class="spinner-border text-primary" id="loading3" style="display: none; text-align: center;">
                <span class="sr-only">Loading...</span>
            </div>

            <table class="table table-striped- table-bordered table-hover dataTable no-footer dtr-inline" id="kt_table_3" style="display: none;">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Morada</th>
                        <th>Telefone</th>
                        <th>Email</th>
                        <th>Tipo Utilizador</th>
                        <th>Status</th>
                        <th>Data Criação</th>
                        <th>Ultimo Acesso</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Nome</td>
                            <td>@item.Morada</td>
                            <td>@item.Telefone</td>
                            <td>@item.Email</td>
                            <td>@item.Tipo</td>
                            <td>@item.Status</td>
                            <td>@item.DataCricao</td>
                            <td>@item.UltimoAcesso</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

}