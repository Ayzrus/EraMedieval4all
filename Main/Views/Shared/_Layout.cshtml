@using Main.Helpers

<!DOCTYPE html>
<html lang="pt-PT">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!--Font Style-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700">

    <!-- Template Plugins and Styles -->
    <link href="~/lib/Template/dist/assets/css/style.bundle.css" rel="stylesheet" />
    <link href="~/lib/Template/dist/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" />
    <link href="~/lib/Template/dist/assets/css/skins/header/base/light.css" rel="stylesheet" />
    <link href="~/lib/Template/dist/assets/css/skins/header/menu/light.css" rel="stylesheet" />
    <link href="~/lib/Template/dist/assets/css/skins/brand/navy.css" rel="stylesheet" />
    <link href="~/lib/Template/dist/assets/css/skins/aside/navy.css" rel="stylesheet" />
    <link href="~/lib/Template/dist/assets/plugins/global/plugins.bundle.css" rel="stylesheet" />

    <!-- Specific Page CSS -->
    <link rel="stylesheet" href="~/Main.styles.css" asp-append-version="true" />
</head>
<body class="kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--enabled kt-subheader--transparent kt-aside--enabled kt-aside--fixed">

    <!-- Mobile Header -->
    <div id="kt_header_mobile" class="kt-header-mobile kt-header-mobile--fixed">
        <div class="kt-header-mobile__logo">
            <a asp-area="" asp-controller="Dashboard" asp-action="Index">
                <img alt="Logo" style="width: 150px" src="@Url.Content("~/lib/Template/dist/assets/media/logos/logo-10.png")" />
            </a>
        </div>
        <div class="kt-header-mobile__toolbar">
            <button class="kt-header-mobile__toolbar-toggler kt-header-mobile__toolbar-toggler--left" id="kt_aside_mobile_toggler">
                <span></span>
            </button>
            <button class="kt-header-mobile__toolbar-topbar-toggler" id="kt_header_mobile_topbar_toggler"><i class="flaticon-more"></i></button>
        </div>
    </div>

    <!-- Main Grid Container -->
    <div class="kt-grid kt-grid--hor kt-grid--root">

        <!-- Page Content -->
        <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--ver kt-page">

            <!-- Sidebar -->
            <button class="kt-aside-close" id="kt_aside_close_btn"><i class="la la-close"></i></button>
            <div class="kt-aside kt-aside--fixed kt-grid__item kt-grid kt-grid--desktop kt-grid--hor-desktop" id="kt_aside">

                <!-- Sidebar Brand -->
                <div class="kt-aside__brand kt-grid__item" id="kt_aside_brand">
                    <div class="kt-aside__brand-logo">
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            <img alt="Logo" style="width: 150px" src="@Url.Content("~/lib/Template/dist/assets/media/logos/logo-10.png")" />
                        </a>
                    </div>
                    <div class="kt-aside__brand-tools">
                        <button class="kt-aside__brand-aside-toggler kt-aside__brand-aside-toggler--left" id="kt_aside_toggler">
                            <span></span>
                        </button>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <div class="kt-aside-menu-wrapper kt-grid__item kt-grid__item--fluid" id="kt_aside_menu_wrapper">
                    <div id="kt_aside_menu" class="kt-aside-menu" data-ktmenu-vertical="1" data-ktmenu-scroll="1" data-ktmenu-dropdown-timeout="500">
                        <ul class="kt-menu__nav">
                            <li class="kt-menu__item kt-menu__item--submenu" aria-haspopup="true" data-ktmenu-submenu-toggle="hover">
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="kt-menu__link kt-menu__toggle">
                                    <i class="kt-menu__link-icon fa fa-home" style="padding-left: 0.1em; font-size: 20px"></i>
                                    <span class="kt-menu__link-text">Dashboard</span>
                                </a>
                            </li>
                            <li class="kt-menu__item  kt-menu__item--submenu" aria-haspopup="true" data-ktmenu-submenu-toggle="hover">
                                <a href="javascript:;" class="kt-menu__link kt-menu__toggle"><i class="kt-menu__link-icon fa fa-users"></i><span class="kt-menu__link-text">Trajes</span><i class="kt-menu__ver-arrow la la-angle-right"></i></a>
                                <div class="kt-menu__submenu ">
                                    <span class="kt-menu__arrow"></span>
                                    <ul class="kt-menu__subnav">
                                        <li class="kt-menu__item  kt-menu__item--parent" aria-haspopup="true"><span class="kt-menu__link"><span class="kt-menu__link-text">Trajes</span></span></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Trajes" asp-action="Index" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Listagem</span></a></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Trajes" asp-action="Registar" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Registar</span></a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="kt-menu__item  kt-menu__item--submenu" aria-haspopup="true" data-ktmenu-submenu-toggle="hover">
                                <a href="javascript:;" class="kt-menu__link kt-menu__toggle"><i class="kt-menu__link-icon fa fa-users"></i><span class="kt-menu__link-text">Clientes</span><i class="kt-menu__ver-arrow la la-angle-right"></i></a>
                                <div class="kt-menu__submenu ">
                                    <span class="kt-menu__arrow"></span>
                                    <ul class="kt-menu__subnav">
                                        <li class="kt-menu__item  kt-menu__item--parent" aria-haspopup="true"><span class="kt-menu__link"><span class="kt-menu__link-text">Clientes</span></span></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Clientes" asp-action="Index" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Listagem</span></a></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Clientes" asp-action="Registar" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Registar</span></a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="kt-menu__item  kt-menu__item--submenu" aria-haspopup="true" data-ktmenu-submenu-toggle="hover">
                                <a href="javascript:;" class="kt-menu__link kt-menu__toggle"><i class="kt-menu__link-icon fa fa-users"></i><span class="kt-menu__link-text">Aluguer</span><i class="kt-menu__ver-arrow la la-angle-right"></i></a>
                                <div class="kt-menu__submenu ">
                                    <span class="kt-menu__arrow"></span>
                                    <ul class="kt-menu__subnav">
                                        <li class="kt-menu__item  kt-menu__item--parent" aria-haspopup="true"><span class="kt-menu__link"><span class="kt-menu__link-text">Aluguer</span></span></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Aluguer" asp-action="Index" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Listagem</span></a></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Aluguer" asp-action="Registar" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Registar</span></a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="kt-menu__item  kt-menu__item--submenu" aria-haspopup="true" data-ktmenu-submenu-toggle="hover">
                                <a href="javascript:;" class="kt-menu__link kt-menu__toggle"><i class="kt-menu__link-icon fa fa-users"></i><span class="kt-menu__link-text">Eventos</span><i class="kt-menu__ver-arrow la la-angle-right"></i></a>
                                <div class="kt-menu__submenu ">
                                    <span class="kt-menu__arrow"></span>
                                    <ul class="kt-menu__subnav">
                                        <li class="kt-menu__item  kt-menu__item--parent" aria-haspopup="true"><span class="kt-menu__link"><span class="kt-menu__link-text">Eventos</span></span></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Eventos" asp-action="Index" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Listagem</span></a></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Eventos" asp-action="Registar" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Registar</span></a></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Eventos" asp-action="Organizador" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Registar Organizador</span></a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="kt-menu__item  kt-menu__item--submenu" aria-haspopup="true" data-ktmenu-submenu-toggle="hover">
                                <a href="javascript:;" class="kt-menu__link kt-menu__toggle"><i class="kt-menu__link-icon fa fa-users"></i><span class="kt-menu__link-text">Utilizadores</span><i class="kt-menu__ver-arrow la la-angle-right"></i></a>
                                <div class="kt-menu__submenu ">
                                    <span class="kt-menu__arrow"></span>
                                    <ul class="kt-menu__subnav">
                                        <li class="kt-menu__item  kt-menu__item--parent" aria-haspopup="true"><span class="kt-menu__link"><span class="kt-menu__link-text">Utilizadores</span></span></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Users" asp-action="Index" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Logs</span></a></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Users" asp-action="UsersList" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Utilizadores</span></a></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Users" asp-action="Registar" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Registar</span></a></li>
                                    </ul>
                                </div>
                            </li>                            
                            <li class="kt-menu__item  kt-menu__item--submenu" aria-haspopup="true" data-ktmenu-submenu-toggle="hover">
                                <a href="javascript:;" class="kt-menu__link kt-menu__toggle"><i class="kt-menu__link-icon fa fa-book"></i><span class="kt-menu__link-text">Relátorios</span><i class="kt-menu__ver-arrow la la-angle-right"></i></a>
                                <div class="kt-menu__submenu ">
                                    <span class="kt-menu__arrow"></span>
                                    <ul class="kt-menu__subnav">
                                        <li class="kt-menu__item  kt-menu__item--parent" aria-haspopup="true"><span class="kt-menu__link"><span class="kt-menu__link-text">Relátorios</span></span></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Relatorios" asp-action="Index" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Relátorios</span></a></li>
                                        <li class="kt-menu__item" aria-haspopup="true"><a asp-area="" asp-controller="Relatorios" asp-action="Bloqueados" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Utilizadores Bloqueados</span></a></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

            <!-- Main Content Wrapper -->
            <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor kt-wrapper mt-2" id="kt_wrapper">

                <!-- Header -->
                <div id="kt_header" class="kt-header kt-grid__item  kt-header--fixed ">

                    <!-- begin:: Header Menu -->
                    <button class="kt-header-menu-wrapper-close" id="kt_header_menu_mobile_close_btn"><i class="la la-close"></i></button>
                    <div class="kt-header-menu-wrapper" id="kt_header_menu_wrapper">
                        <div id="kt_header_menu" class="kt-header-menu kt-header-menu-mobile  kt-header-menu--layout- ">
                            <ul class="kt-menu__nav ">
                                @* <li class="kt-menu__item kt-menu__item--submenu kt-menu__item--rel" data-ktmenu-submenu-toggle="click" aria-haspopup="true">
                                <a href="javascript:;" class="kt-menu__link kt-menu__toggle"><span class="kt-menu__link-text">Ações</span><i class="kt-menu__hor-arrow la la-angle-down"></i><i class="kt-menu__ver-arrow la la-angle-right"></i></a>
                                <div class="kt-menu__submenu kt-menu__submenu--classic kt-menu__submenu--left">
                                <ul class="kt-menu__subnav">
                                <li class="kt-menu__item " aria-haspopup="true"><a href="#" class="kt-menu__link "><i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i><span class="kt-menu__link-text">Criar um novo Post</span></a></li>
                                </ul>
                                </div>
                                </li> *@
                            </ul>
                        </div>
                    </div>

                    <!-- end:: Header Menu -->
                    <!-- begin:: Header Topbar -->
                    <div class="kt-header__topbar">
                        <!--begin: User Bar -->
                        <div class="kt-header__topbar-item kt-header__topbar-item--user">
                            <div class="kt-header__topbar-wrapper" data-toggle="dropdown" data-offset="0px,0px">

                                <!--use "kt-rounded" class for rounded avatar style-->
                                <div class="kt-header__topbar-user kt-rounded-">
                                    <span class="kt-header__topbar-welcome kt-hidden-mobile">Olá,</span>
                                    <span class="kt-header__topbar-username kt-hidden-mobile">@Context.Session.GetString("nome")</span>
                                    <img alt="Pic" src="@Url.Content("~/lib/Template/dist/assets/media/users/default.jpg")" class="kt-rounded-" />

                                    <!--use below badge element instead the user avatar to display username's first letter(remove kt-hidden class to display it) -->
                                    <span class="kt-badge kt-badge--username kt-badge--lg kt-badge--brand kt-hidden kt-badge--bold">S</span>
                                </div>
                            </div>
                            <div class="dropdown-menu dropdown-menu-fit dropdown-menu-right dropdown-menu-anim dropdown-menu-top-unround dropdown-menu-sm">
                                <div class="kt-user-card kt-margin-b-40 kt-margin-b-30-tablet-and-mobile" style="background-image: url(@Url.Content("~/lib/Template/dist/assets/media/misc/head_bg_sm.jpg"))">
                                    <div class="kt-user-card__wrapper">
                                        <div class="kt-user-card__pic">

                                            <!--use "kt-rounded" class for rounded avatar style-->
                                            <img alt="Pic" src="@Url.Content("~/lib/Template/dist/assets/media/users/default.jpg")" class="kt-rounded-" />
                                        </div>
                                        <div class="kt-user-card__details">
                                            <div class="kt-user-card__name">
                                                @Context.Session.GetString("nome")
                                            </div>
                                            <div class="kt-user-card__position">@Context.Session.GetString("email")</div>
                                        </div>

                                    </div>
                                </div>
                                <ul class="kt-nav kt-margin-b-10">
                                    <li class="kt-nav__item">
                                        <a asp-area="" asp-controller="Users" asp-action="Perfil" class="kt-nav__link">
                                            <span class="kt-nav__link-icon"><i class="flaticon2-calendar-3"></i></span>
                                            <span class="kt-nav__link-text">Perfil</span>
                                        </a>
                                    </li>
                                    <li class="kt-nav__custom kt-space-between">
                                        <form asp-action="Logout" asp-controller="Dashboard" method="post">
                                            <button type="submit" class="btn btn-info">Encerrar Sessão</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!--end: User Bar -->
                    </div>

                    <!-- end:: Header Topbar -->

                </div>

                <!-- Content -->
                <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid" id="kt_content">

                    <!-- begin:: Subheader -->
                    <div class="kt-section__content kt-section__content--border">
                        @Html.Raw(Html.GenerateBreadcrumb(ViewContext))
                    </div>
                    <!-- end:: Subheader -->

                    @RenderBody()
                </div>

                <!-- Footer -->
                <div class="kt-footer kt-grid__item kt-grid kt-grid--desktop kt-grid--ver-desktop">
                    <div class="kt-container kt-container--fluid">
                        <div class="kt-footer__copyright mt-2">
                            @DateTime.Now.Year.ToString()&nbsp;©&nbsp;<a asp-area="" asp-controller="Home" asp-action="Index" class="kt-link">Rodrigo Carvalho</a>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <!-- JavaScript -->
    <script>
        var KTAppOptions = {
            "colors": {
                "state": {
                    "brand": "#5d78ff",
                    "metal": "#c4c5d6",
                    "light": "#ffffff",
                    "accent": "#00c5dc",
                    "primary": "#5867dd",
                    "success": "#34bfa3",
                    "info": "#36a3f7",
                    "warning": "#ffb822",
                    "danger": "#fd3995",
                    "focus": "#9816f4"
                },
                "base": {
                    "label": [
                        "#c5cbe3",
                        "#a1a8c3",
                        "#3d4465",
                        "#3e4466"
                    ],
                    "shape": [
                        "#f0f3ff",
                        "#d9dffa",
                        "#afb4d4",
                        "#646c9a"
                    ]
                }
            }
        };
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/Template/dist/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/lib/Template/dist/assets/js/scripts.bundle.js"></script>
    <script src="~/lib/Template/dist/assets/js/global/components/base/util.js"></script>
    <script src="~/lib/Template/dist/assets/js/global/layout/quick-search.js"></script>
    <script src="~/lib/Template/dist/assets/plugins/custom/datatables/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
